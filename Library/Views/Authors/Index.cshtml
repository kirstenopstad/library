@{
  Layout = "_Layout";
}
@using Library.Models

<h1>Authors</h1>

@if (Model.Count != 0)
{
  <table class="table table-striped">
    <tr>
      <th>Author Name</th>
    </tr>
  @foreach (Author author in Model)
  {
    <tr>
      <td>@Html.ActionLink($"{author.Name}", "Details", new { id = author.AuthorId })</td>
    </tr>
  }  
  </table>
}
<p>@Html.ActionLink("Add Author", "Create")</p>